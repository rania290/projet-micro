# Environment variables for Social Network Microservices

# Database
MONGODB_URI=mongodb://admin:password@mongodb:27017/social-network?authSource=admin

# Kafka
KAFKA_BROKERS=kafka:9092

# Services
POSTS_SERVICE_PORT=3020
GRAPHQL_SERVICE_PORT=4000
CHAT_SERVICE_PORT=50051
POSTS_SERVICE_URL=http://posts-service:3020

# Docker Registry (for production)
DOCKER_REGISTRY=your-dockerhub-username
DOCKER_HUB_CREDENTIALS_USR=your-dockerhub-username
DOCKER_HUB_CREDENTIALS_PSW=your-dockerhub-password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Kubernetes
NAMESPACE=social-network